import random

def roll_dice(sides=6):
    return random.randint(1, sides)

def main():
    print("🎲 Welcome to the Digital Dice Roller!")
    
    while True:
        try:
            sides = int(input("How many sides should the dice have? (default 6): ") or 6)
            rolls = int(input("How many times do you want to roll? (default 1): ") or 1)
            
            print("\nRolling...")
            for i in range(rolls):
                result = roll_dice(sides)
                print(f"Roll {i+1}: {result}")
            
            again = input("\nRoll again? (y/n): ").lower()
            if again != 'y':
                print("Goodbye! 🎯")
                break
        except ValueError:
            print("❌ Please enter a valid number.")

if __name__ == "__main__":
    main()
