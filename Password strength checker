import random
import string

def check_password_strength(password):
    strength = 0
    feedback = []

    if len(password) >= 12:
        strength += 1
    else:
        feedback.append("Password should be at least 12 characters.")

    if any(c.islower() for c in password):
        strength += 1
    else:
        feedback.append("Add at least one lowercase letter.")

    if any(c.isupper() for c in password):
        strength += 1
    else:
        feedback.append("Add at least one uppercase letter.")

    if any(c.isdigit() for c in password):
        strength += 1
    else:
        feedback.append("Include at least one number.")

    if any(c in string.punctuation for c in password):
        strength += 1
    else:
        feedback.append("Add at least one special character.")

    if strength == 5:
        return "‚úÖ Strong Password!"
    else:
        return "‚ö†Ô∏è Weak Password:\n" + "\n".join(feedback)

def generate_strong_password(length=16):
    if length < 12:
        length = 12  # enforce minimum strong length

    all_chars = string.ascii_letters + string.digits + string.punctuation
    password = ''.join(random.choice(all_chars) for _ in range(length))
    return password

# --- Main ---
user_input = input("Enter your password (or type 'generate' to create one): ")

if user_input.lower() == "generate":
    new_password = generate_strong_password()
    print(f"\nüîê Generated Password: {new_password}")
    print(check_password_strength(new_password))
else:
    print("\nüîé Checking password strength...")
    result = check_password_strength(user_input)
    print(result)
